#include <iostream>
using namespace std;
int main()
{
    float a,b,c,promedio;
    cout<<"Ingrese el primer numero: "<<endl;
    cin>>a;
    if (a<0 || a>10){
    cout<<"Error.El valor del primer numero esta fuera de rango";
    return 0;
    }
    cout<<"Ingrese el segundo numero: "<<endl;
    cin>>b;
    if (b<0||b>10){
    cout<<"Error.El valor del segundo numero esta fuera de rango";
    return 0;
    }
    cout<<"Ingrese el tercer numero: "<<endl;
    cin>>c;
    if (c<0||c>10){
    cout<<"Error.El valor del tercer numero esta fuera de rango";
    return 0;
    }
    promedio=(a+b+c)/3;
    cout<<"El promedio de los numeros es: "<<promedio;
    return 0;
}
