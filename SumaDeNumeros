#include <iostream>
using namespace std;
int main()
{
    
    int contador=1,acumulador=0,num;
    do{
    cout<<"Ingresa la cantidad de numeros consecutivos que quieres sumar"<<endl;
    cin>>num;
    }while(num<=0||num>50);
    while(contador <=num){
        acumulador=acumulador + contador;
        contador=contador + 1;
        
    }
    cout<<"La suma de los primeros "<<num<<" numeros es: "<<acumulador;
    return 0;
}
